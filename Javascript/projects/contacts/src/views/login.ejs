<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8">
            <h1 class="text-center my-3">Create account or Login</h1>
            <p class="text-center">Login or create your account.</p>

            <%- include('includes/messages') %>

            <div class="row">
                <div class="col-lg my-4">
                    <h4>Make your registration</h4>
                    <p>If you don't have an account, fill in the form below</p>

                    <form class="form-registration" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="mb-3">
                          <label class="form-label w-100">
                                Your E-mail
                                <input type="email" class="form-control" name="email">
                          </label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label w-100">
                                Your Password
                                <input type="password" class="form-control" name="password">
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Create account</button>
                    </form>
                </div>

                <div class="col-lg my-4">
                    <h4>Login</h4>
                    <p>If you already have an account, login below</p>

                    <form class="form-login" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="mb-3">
                          <label class="form-label w-100">
                                Your E-mail
                                <input type="email" class="form-control" name="email">
                          </label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label w-100">
                                Your Password
                                <input type="password" class="form-control" name="password">
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>