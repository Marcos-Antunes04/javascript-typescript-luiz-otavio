<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8">
            <h1 class="text-center my-3">Contacts</h1>
            <p class="text-center">Your contacts are below.</p>

            <%- include('includes/messages') %>

            <% if(contacts.length > 0) { %>
            <div class="resposive-table">
                <table class="table my-3">
                    <% contacts.forEach(contact => { %>
                        <tr>
                            <td><%= contact.firstname %></td>
                            <td><%= contact.lastname %></td>
                            <td><%= contact.cellphone %></td>
                            <td><%= contact.email %></td>
                            <td><a href="/contact/index/<%= contact.id %>">Edit</a></td>
                            <td><a class="text-danger" href="/contact/delete/<%= contact.id %>">Delete</a></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
            <% } else { %>
                <p class="text-center lead">No contact registered.</p>
            <% } %>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>