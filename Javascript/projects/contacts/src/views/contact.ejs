<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8">
            <div class="text-center">
                <h1 class="text-center my-3">Contact</h1>
                <p class="text-center">Create or edit a contact below.</p>
            </div>

            <%- include('includes/messages') %>
            
            <form action="/contact/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                  <label class="form-label w-100">
                    Firstname
                    <input value="<%= contact.firstname %>" type="text" class="form-control" name="firstname">
                  </label>
                </div>

                <div class="mb-3">
                  <label class="form-label w-100">
                    Lastname
                    <input value="<%= contact.lastname %>" type="text" class="form-control" name="lastname">
                  </label>
                </div>   

                <div class="mb-3">
                  <label class="form-label w-100">
                    E-mail
                    <input value="<%= contact.email %>" type="email" class="form-control" name="email">
                  </label>
                </div>      

                <div class="mb-3">
                  <label class="form-label w-100">
                    Cellphone Number
                    <input value="<%= contact.cellphone %>" type="tel" class="form-control" name="cellphone">
                  </label>
                </div>
                
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>