<%- include('includes/head') %>
<%- include('includes/nav') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-4">
                <h1 class="text-center">Login</h1>
                <p class="text-center lead">Sign in or create your account below.</p>

                <%- include('includes/messages') %>

                <div class="row">
                    <div class="col-lg mx-3">
                        <h4>Create your account</h4>

                        <p>If you don't have an account, fill out the form below:</p>

                        <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                            <div class="form-group">
                              <label>Your address</label>
                              <input type="email" class="form-control mt-1" name="email" placeholder="Enter email">
                            </div>                            

                            <div class="form-group my-3">
                              <label>Your password</label>
                              <input type="password" class="form-control mt-1" name="password" placeholder="Password">
                            </div>

                            <button type="submit" class="btn btn-primary">Create you account</button>
                        </form>
                    </div>
    
                    <div class="col-lg">
                        <h4>Make you login</h4>

                        <p>if you already have an account, make login below:</p>

                        <form action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                            <div class="form-group my-3">
                              <label>Your address</label>
                              <input type="email" class="form-control mt-1" name="email" placeholder="Enter email">
                            </div>                            

                            <div class="form-group my-3">
                              <label>Your password</label>
                              <input type="password" class="form-control mt-1" name="password" placeholder="Password">
                            </div>

                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>
