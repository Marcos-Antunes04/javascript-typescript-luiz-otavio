<%- include('includes/head') %>
<%- include('includes/nav') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-4">
                <h1 class="text-center">Contacts</h1>
                <p class="text-center lead">Create or edit your contact below.</p>

                <%- include('includes/messages') %>

                <form action="/contact/register" method="POST">
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                    <div class="form-group my-3">
                      <label>First Name</label>
                      <input value="<%= contact.firstName %>" type="text" class="form-control mt-1" name="firstName" placeholder="First Name">
                    </div>

                    <div class="form-group my-3">
                      <label>Last Name</label>
                      <input value="<%= contact.lastName %>" type="text" class="form-control mt-1" name="lastName" placeholder="Last Name">
                    </div>

                    <div class="form-group my-3">
                      <label>E-mail</label>
                      <input value="<%= contact.email %>" type="email" class="form-control mt-1" name="email" placeholder="E-mail">
                    </div>

                    <div class="form-group my-3">
                      <label>Phone Number</label>
                      <input value="<%= contact.phoneNumber %>" type="tel" class="form-control mt-1" name="phoneNumber" placeholder="Phone Number">
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>
