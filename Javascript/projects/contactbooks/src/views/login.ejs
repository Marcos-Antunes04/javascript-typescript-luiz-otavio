<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="cow-lg-2"></div>

        <div class="cow-lg-8 my-4">
            <h1 class="text-center">Create account or Login</h1>
            <p class="text-center lead">Sign in or create your account</p>

            <div class="row">
                <div class="col-lg">
                    <h4>Create account</h4>
                    <p>If you don't have an account, fill the form below:</p>

                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-3 form-group">
                            <label class="form-label">
                                Email address
                                <input type="email" class="form-control" name="email">
                            </label>
                        </div>
                        <div class="mb-3 form-group">
                            <label class="form-label">
                                Password
                                <input type="password" class="form-control" name="password">
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary">Create account</button>
                    </form>
                </div>

                <div class="col-lg">
                    <h4>Sign in</h4>
                    <p>If you already have an account, login below:</p>

                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-3 form-group">
                            <label class="form-label">
                                Email address
                                <input type="email" class="form-control" name="email">
                            </label>
                        </div>
                        <div class="mb-3 form-group">
                            <label class="form-label">
                                Password
                                <input type="password" class="form-control" name="password">
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="cow-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>